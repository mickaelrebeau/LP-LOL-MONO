{% extends 'base.html.twig' %}

{% block title %}Connexion à l'application :{% endblock %}

{% block body %}

<style>
    h1 {
        text-align:center;
    }

    #login_submit {
        background-color : #36827F;
        color: #F8F9FA;
    }

    .green {
        background-color : #C2EFB3;
        color : #262626;
    }

    .form-check-input {
        scale: 1.4;
    }


        

</style>

<div class="container-fluid mt-4 p-4">

    <h1 class="mb-3"> Connexion à l'application :</h1>

    <div class="row">

            <div class="col-10 mx-auto p-4 green border border-secondary-subtle rounded shadow">
                
                {% if error %}
                    <div class="alert alert-danger" role="alert">
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    </div>
                {% endif %}
                

                <form action="{{ path('app_connect') }}" method="post" >
                    <div class="mb-3 row justify-content-center">
                        <label for="username" class="form-label col-md-2">Email:</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form_control col-md-6" >
                    </div>
                    <div class="mb-3 row justify-content-center">
                        <label for="password" class="form-label col-md-2">Password:</label>
                        <input type="password" id="password" name="_password" class="form_control col-md-6" >
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    {# If you want to control the URL the user is redirected to on success #}
                    <input type="hidden" name="app_home" value="/account"> 

                    <div class="mb-3 row justify-content-center">
                        <button class="btn btn-primary col-md-2" type="submit" id="login_submit">Connexion</button>
                    </div>
                </form>
            </div>
    </div>
</div>
   
{% endblock %}



